{
    "extends": "eslint-config-airbnb",
    // "extends": "airbnb",
    "rules": {
        "max-len": [
            1,
            120,
            2,
            {
                "ignoreComments": true
            }
        ],
        "quote-props": [
            1,
            "consistent-as-needed"
        ],
        "no-cond-assign": [
            2,
            "except-parens"
        ],
        // "radix": 0,
        "space-infix-ops": 0,
        "no-unused-vars": [
            1,
            {
                "vars": "local",
                "args": "none"
            }
        ],
        // "default-case": 0,
        "no-else-return": 0,
        "no-param-reassign": 0,
        "quotes": 0,
        "indent": [
            "error",
            4
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "linebreak-style": 0
    },
    "globals": {
        "document": true,
        "foo": true,
        "window": true
    }
}
